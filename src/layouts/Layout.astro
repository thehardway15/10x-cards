---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <Toaster position="bottom-right" client:load />
    <script>
      // Global script to ensure all fetch requests include the auth token if available
      const originalFetch = window.fetch;
      window.fetch = function(url, options = {}) {
        // Clone the options to avoid modifying the original object
        const newOptions = { ...options };
        
        // Initialize headers if not set
        newOptions.headers = newOptions.headers || {};
        
        // Get the auth token from localStorage
        const token = localStorage.getItem('auth_token');
        
        // If token exists and Authorization header isn't already set, add it
        if (token && !newOptions.headers['Authorization']) {
          newOptions.headers = {
            ...newOptions.headers,
            'Authorization': `Bearer ${token}`
          };
        }
        
        // Call the original fetch with the new options
        return originalFetch(url, newOptions);
      };
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
